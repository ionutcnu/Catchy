{
  "name": "catchy",
  "version": "0.1.0",
  "description": "A Chrome extension that catches console and runtime errors and shows clean, customizable toasts",
  "type": "module",
  "scripts": {
    "dev": "vite build --mode development --watch",
    "dev:playground": "node scripts/dev-playground.js",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src",
    "format": "biome format --write src",
    "check": "biome check src",
    "check:fix": "biome check --write src",
    "type-check": "tsc --noEmit",
    "postinstall": "npx puppeteer browsers install chrome || echo 'Puppeteer browser installation failed - you can install manually or use system Chrome'"
  },
  "keywords": [
    "chrome-extension",
    "error-tracking",
    "developer-tools",
    "toast-notifications"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.0",
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.12.7",
    "@vitejs/plugin-react": "^4.2.1",
    "puppeteer": "^24.26.1",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "vite-plugin-biome": "^1.0.12",
    "vite-plugin-static-copy": "^1.0.4"
  },
  "dependencies": {
    "@nova-mcp/mcp-nova": "^0.3.0"
  }
}
