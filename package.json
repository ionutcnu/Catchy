{
  "name": "catchy",
  "version": "0.1.0",
  "description": "A Chrome extension that catches console and runtime errors and shows clean, customizable toasts",
  "type": "module",
  "scripts": {
    "dev": "vite build --mode development --watch",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "biome lint src",
    "lint:fix": "biome lint --apply src",
    "format": "biome format --write src",
    "check": "biome check src",
    "check:fix": "biome check --apply src",
    "type-check": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [
    "chrome-extension",
    "error-tracking",
    "developer-tools",
    "toast-notifications"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.0",
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.12.7",
    "@vitejs/plugin-react": "^4.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "vite-plugin-static-copy": "^1.0.4"
  },
  "dependencies": {
    "@nova-mcp/mcp-nova": "^0.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "biome check --write"
    ],
    "*.{json,md}": [
      "biome format --write"
    ],
    ".vscode/*.json": [
      "biome format --write"
    ]
  }
}
