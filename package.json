{
  "name": "catchy",
  "version": "1.0.0",
  "description": "A Chrome extension that catches console and runtime errors and shows clean, customizable toasts with error history drawer and per-site controls",
  "type": "module",
  "scripts": {
    "dev": "vite build --mode development --watch",
    "dev:playground": "node scripts/dev-playground.js",
    "build": "tsc && vite build && bun run copy-assets",
    "copy-assets": "node -e \"require('fs').cpSync('manifest.json', 'dist/manifest.json'); require('fs').cpSync('public/icons', 'dist/icons', {recursive: true})\"",
    "preview": "vite preview",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src",
    "format": "biome format --write src",
    "check": "biome check src",
    "check:fix": "biome check --write src",
    "type-check": "tsc --noEmit",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "test:report": "playwright show-report",
    "test:codegen": "playwright codegen"
  },
  "keywords": [
    "chrome-extension",
    "error-tracking",
    "developer-tools",
    "toast-notifications",
    "error-history",
    "console-errors",
    "debugging",
    "react",
    "typescript",
    "tailwind"
  ],
  "author": "Lonut & Wadalin",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@playwright/test": "^1.48.0",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.12.7",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "playwright": "^1.48.0",
    "postcss": "^8.5.6",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "vite-plugin-biome": "^1.0.12"
  },
  "dependencies": {
    "@nova-mcp/mcp-nova": "^0.3.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
